<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dcs.myretailer.app.Report.ReportProductFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgcash">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/product_linear_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_greyish"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LayTotalSales"
            android:layout_width="350dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txttotalQty"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Total Sales (0 item sold)"
                android:textColor="@color/mine_shaft"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txttotalPriceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="$0.00"
                android:textColor="@color/dark_blue"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/default_cover"

            app:cardBackgroundColor="@color/cardview_light_background">

            <ListView
                android:id="@+id/ReportProductListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/cardview_shadow_start_color"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="false"
                android:padding="10dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
</layout>