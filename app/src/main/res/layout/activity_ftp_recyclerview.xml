    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_product_circle3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/ftpTextValue"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="10dp" />


        <ImageView
            android:id="@+id/dropDownSync"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ftpTextValue"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout"
            app:srcCompat="@drawable/ic_arrow_down_grey_500" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/ftpTextValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ftpTextValue"
            app:layout_constraintTop_toTopOf="@+id/ftpTextValue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ftpEditTextValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_product_circle3"
                android:textAllCaps="false"
                android:textColor="@color/mine_shaft"
                android:textColorHint="@color/dark_blue" />

        </com.google.android.material.textfield.TextInputLayout>

