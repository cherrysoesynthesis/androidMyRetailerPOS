<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dcs.myretailer.app.Setting.ActivityMapSetup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar_xml" />

        <Spinner
            android:id="@+id/spn_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/nasty_green" />

        <LinearLayout
            android:id="@+id/layOverAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColorHint="@color/dark_blue">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linear_product_circle"
                        android:hint="LAYOUT NAME"
                        android:inputType="textCapCharacters"
                        android:textAllCaps="true"
                        android:textColor="@color/mine_shaft"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3"
                android:orientation="vertical">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/linear_product_circle4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEFAULT COLOR"
                        android:textColor="@color/dark_blue" />

                    <LinearLayout
                        android:id="@+id/choose_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <com.dcs.myretailer.app.FlatButton
                            android:id="@+id/btn_color"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Color" />

                        <!--<TextView-->
                        <!--android:layout_marginLeft="20sp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="#FFFFFF"-->
                        <!--android:textColor="@color/mine_shaft"/>-->
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColorHint="@color/color_blue">


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColorHint="@color/dark_blue">

                    <EditText
                        android:id="@+id/edit_text_product_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linear_product_circle"
                        android:hint="DEFAULT COLOR"
                        android:inputType="textCapCharacters"
                        android:textAllCaps="true"
                        android:textColor="@color/mine_shaft"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="14sp" />


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lbl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxWidth="50dp"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:text="Name"
                    android:textColor="@color/mine_shaft" />

                <EditText
                    android:id="@+id/et_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:lines="1"
                    android:maxLines="1">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lbl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"
                    android:text="BG Color"
                    android:textColor="@color/mine_shaft" />

                <com.dcs.myretailer.app.FlatButton
                    android:id="@+id/btn_color1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lbl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"
                    android:text="BG Image"
                    android:textColor="@color/mine_shaft" />

                <com.dcs.myretailer.app.FlatButton
                    android:id="@+id/btn_img"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Set Image" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="Edit Layout"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Layout"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="Save"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="false"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="Delete"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="false"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="Back"
                    android:textColor="@color/cardview_light_background"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_save1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.33"
                    android:text="Save" />

                <Button
                    android:id="@+id/btn_del1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.33"
                    android:text="Delete" />

                <Button
                    android:id="@+id/btn_back1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.33"
                    android:text="Back" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</layout>
