<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:visibility="visible"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linear_product_circle3">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColorHint="@color/dark_blue">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_product_circle"
                android:hint="NAME"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/mine_shaft"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout> <LinearLayout
        android:visibility="visible"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linear_product_circle3">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColorHint="@color/dark_blue">

            <EditText
                android:id="@+id/et_tblname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_product_circle"
                android:hint="Table Name"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/mine_shaft"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxWidth="50dp"
            android:maxLines="1"
            android:minWidth="50dp"
            android:text="Name"
            android:textColor="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/et_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/cardview_dark_background" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="Type"
            android:textColor="@color/cardview_dark_background" />

        <Spinner
            android:id="@+id/spn_tbltype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_obj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="Map Layout"
            android:textColor="@color/cardview_dark_background" />

        <Spinner
            android:id="@+id/spn_obj"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tblname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxWidth="50dp"
            android:maxLines="2"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:text="Table Name"
            android:textColor="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/et_tblname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ems="10"
            android:lines="1"
            android:maxLength="12"
            android:textColor="@color/cardview_dark_background"
            android:maxLines="1" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="60dp"
            android:minWidth="60dp"
            android:minHeight="50dp"
            android:text="Font Size"
            android:textColor="@color/cardview_dark_background" />

        <Spinner
            android:id="@+id/spn_fontsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="Style"
            android:textColor="@color/cardview_dark_background" />

        <Spinner
            android:id="@+id/spn_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linear_product_circle3">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColorHint="@color/dark_blue">

            <EditText
                android:id="@+id/edit_text_product_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_product_circle"
                android:hint="DEFAULT COLOR"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/mine_shaft"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linear_product_circle3">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_product_circle4"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEFAULT COLOR"
                android:textColor="@color/dark_blue"/>
            <LinearLayout
                android:id="@+id/choose_color"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.dcs.myretailer.app.FlatButton
                    android:id="@+id/btn_bgcolor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Color" />

                <!--<TextView-->
                <!--android:layout_marginLeft="20sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="#FFFFFF"-->
                <!--android:textColor="@color/mine_shaft"/>-->
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColorHint="@color/color_blue">


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="Design"
            android:textColor="@color/cardview_dark_background" />

        <com.dcs.myretailer.app.FlatButton
            android:id="@+id/btn_txtcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:text="Text" />

        <com.dcs.myretailer.app.FlatButton
            android:id="@+id/btn_bgcolor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:text="BG" />

        <Button
            android:id="@+id/btn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:text="Image" />
    </LinearLayout>

</LinearLayout>