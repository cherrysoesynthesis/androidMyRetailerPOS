<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CashLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/allproduct_bg_color"
        android:orientation="vertical">

        <include layout="@layout/toolbar_xml" />

        <LinearLayout
            android:id="@+id/layOverAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/Layshowamt"
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:background="@color/cardview_light_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:text="TOTAL"
                    android:textColor="@color/login_button_pin_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:text="$343.90"
                    android:textColor="@color/mine_shaft"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="20dp">

                <View
                    android:layout_width="378dp"
                    android:layout_height="1dp"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layshowcollected"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/laycollected"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/allproduct_bg_color"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="COLLECTED"
                        android:textColor="@color/cardview_shadow_start_color"
                        android:textSize="12sp" />
                    <!--            <TextView-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="match_parent"-->
                    <!--                android:layout_marginLeft="10dp"-->
                    <!--                android:layout_marginTop="5dp"-->
                    <!--                android:layout_marginRight="5dp"-->
                    <!--                android:text="CASH COLLECTED"-->
                    <!--                android:textColor="@color/cardview_shadow_start_color"-->
                    <!--                android:textSize="12sp" />-->

                    <EditText
                        android:id="@+id/cash_collected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="@color/cardview_dark_background" />
                </LinearLayout>
                <!--        android:inputType="textCapSentences"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CHANGE DUE"
                        android:textColor="@color/cardview_shadow_start_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/change_due"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                        tools:text="0.0" />
                </LinearLayout>

            </LinearLayout>
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <!--<android.support.v7.widget.GridLayout-->
            <!--xmlns:grid="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/mainGrid"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--grid:useDefaultMargins="true">-->
            <!--</android.support.v7.widget.GridLayout>-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:id="@+id/layshowall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/allproduct_bg_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_10"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/mybutton2"
                        android:text="$10"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_15"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mybutton2"
                        android:text="$15"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_20"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mybutton2"
                        android:text="$20"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_25"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/mybutton2"
                        android:text="$25"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_30"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mybutton2"
                        android:text="$30"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <!--<Button-->
                    <!--android:id="@+id/btn_35"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:background="@drawable/mybutton2"-->
                    <!--android:text="$35"-->
                    <!--android:textColor="@color/mine_shaft"-->
                    <!--android:textSize="14sp" />-->

                    <Button
                        android:id="@+id/btn_50"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mybutton2"
                        android:text="$50"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_100"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/mybutton2"
                        android:text="$100"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_500"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@color/pinlocktextcolor"
                        android:text="$500"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_fixed"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mybutton2"
                        android:text="$0.00"
                        android:textColor="@color/mine_shaft"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Laybtnaccept"
            android:layout_width="345dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBgcash">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_login_button"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="ACCEPT" />
        </LinearLayout>


    </LinearLayout>
</layout>