<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgcash"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgcash"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_id"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="2dp"
            android:background="@drawable/default_cover"
            card_view:cardBackgroundColor="@color/cardview_light_background">


            <LinearLayout
                android:id="@+id/layall"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/stock_agent_plu_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/stock_agent_plu_actual_qty"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/stock_agent_plu_adjustment_qty"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/stock_agent_plu_count_qty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_submit_stock_take"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/check_stock"
                    android:tint="@color/colorPrimaryDark" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
</layout>