<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dcs.myretailer.app.Adapter.CheckOutAdapter">

    <LinearLayout
        android:id="@+id/layCheckoutAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/checkout_product_listview"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/report_product_qty"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="2 x"
                android:textColor="@color/cardview_dark_background" />

            <LinearLayout
                android:id="@+id/LayProductName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Product Name 1"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/report_product_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Product Name 1"
                    android:textColor="@color/greyish"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LayProductPrice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="$210.78"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/report_product_price_old"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="$0.00"
                    android:textColor="@color/greyish"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>
</layout>