<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dcs.myretailer.app.Cashier.RecyclerViewAdapter">
<FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background">
    <LinearLayout
        android:id="@+id/product_linear_layout_id"
        android:layout_width="123dp"
        android:layout_height="105dp"
        android:background="@color/light_greyish"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_id"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/default_cover"

            app:cardBackgroundColor="@color/cardview_light_background">


            <TextView
                android:id="@+id/book_title_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="3sp"
                android:singleLine="false"
                android:text="Israel News ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textColor="#1d1d1d"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="75dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#1d1d1d"
                android:textSize="14sp"
                tools:text="$210.45" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tstid"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_item_ccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/count_item_circle"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>
</layout>