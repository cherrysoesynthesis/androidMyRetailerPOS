<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Setting.ReportSettingActivity">
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBgcash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">

            <include layout="@layout/toolbar_xml" />
            <!--<ListView-->
            <!--android:id="@+id/reportSettingListView"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:divider="@color/cardview_shadow_start_color"-->
            <!--android:dividerHeight="1dp"-->
            <!--android:footerDividersEnabled="false" />-->
            <LinearLayout
                android:id="@+id/LaySales"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Sales"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layCategory"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Category"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayProductSales"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_product_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_product_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Product Sales"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayPayment"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Payment"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayDiscount"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Discount"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Tax"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayCancellation"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_cancellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_cancellation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Cancellation"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/LayReferInfoSales"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_refer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_refer_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Refer Info Sales"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayRefund"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linear_product_circle3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mine_shaft"
                        android:checked="false"
                        android:padding="10dp"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txt_refund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Refund"
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayBtnSave"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:background="@color/colorBgcash">
                <!---->

                <Button
                    android:id="@+id/btn_save_report_settings"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/my_login_button"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="SAVE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>