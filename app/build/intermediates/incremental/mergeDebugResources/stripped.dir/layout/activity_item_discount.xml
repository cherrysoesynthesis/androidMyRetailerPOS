<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical" android:tag="layout/activity_item_discount_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".Cashier.ItemDiscountActivity">

        <include layout="@layout/toolbar_xml" />

        <com.google.android.material.tabs.TabLayout

            android:visibility="visible"
            android:id="@+id/tab_layout_item_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:elevation="6dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppTheme.TabLayout"
            app:tabIndicatorColor="@color/nasty_green"
            app:tabTextAppearance="@style/MineCustomTabText"
            tools:ignore="MissingConstraints" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_layout"
            android:background="@color/allproduct_bg_color"
            android:visibility="visible"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
         