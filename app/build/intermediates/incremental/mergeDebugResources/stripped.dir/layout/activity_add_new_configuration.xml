    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical" android:tag="layout/activity_add_new_configuration_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".Setting.AddNewConfigurationActivity">

        <include layout="@layout/toolbar_xml" />

        <LinearLayout
            android:id="@+id/LayBankName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/linear_product_circle3">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColorHint="@color/dark_blue">

                <EditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_product_circle"
                    android:hint="Bank Name"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/mine_shaft"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayActivate"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
