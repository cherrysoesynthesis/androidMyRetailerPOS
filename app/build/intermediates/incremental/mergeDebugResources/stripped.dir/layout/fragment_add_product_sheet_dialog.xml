                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
