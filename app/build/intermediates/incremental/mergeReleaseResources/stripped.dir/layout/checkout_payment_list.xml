<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                             
                                                 

    <LinearLayout
        android:id="@+id/layCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_icon_myretailer_background"
        android:orientation="vertical" android:tag="layout/checkout_payment_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:accountType="com.dcs.myretailer.app">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true"
            android:visibility="visible"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/lay_payment_method"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_payment_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Payment Methods"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc" />
                </LinearLayout>

                <!--        <RelativeLayout-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content">-->

                <!--            <androidx.recyclerview.widget.RecyclerView-->
                <!--                android:id="@+id/list"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content" />-->

                <!--        </RelativeLayout>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/payment_type_recyclerview_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/ic_icon_myretailer_background"
                        android:fillViewport="true" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
         


