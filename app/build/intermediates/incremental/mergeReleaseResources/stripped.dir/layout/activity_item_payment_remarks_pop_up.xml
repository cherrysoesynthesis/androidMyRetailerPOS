<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <LinearLayout
        android:id="@+id/fadePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp">

            <ImageView
                android:id="@+id/close_cashier_float_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

                <TextView
                    android:id="@+id/txt_header_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="20dp"
                    android:text="Payment Remarks Details"
                    android:textColor="#1d1d1d"
                    android:textSize="18sp"
                    android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<view xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/divider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#30111111" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_old_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:textColor="@color/login_button_pin_color"
                android:textStyle="italic"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/erase"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_product_circle3"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColorHint="@color/dark_blue">

                <EditText
                    android:id="@+id/pop_up_window_itemremarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_product_circle"
                    android:hint="Payment Remarks"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/mine_shaft"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/remarks_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/remarks_scan"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_scan_white_white" />
        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_pop_up_window_itemremarks"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            android:lineSpacingExtra="8sp"
            android:text="SAVE"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_cancel_pop_up_window_itemremarks"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            android:lineSpacingExtra="8sp"
            android:text="CANCEL"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>
</LinearLayout>