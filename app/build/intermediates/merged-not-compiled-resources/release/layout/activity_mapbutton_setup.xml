<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                                          
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical" android:tag="layout/activity_mapbutton_setup_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context="com.dcs.myretailer.app.Setting.ActivityMapButtonSetup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Add"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="false"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Edit"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="false"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Delete"
                android:textColor="@color/cardview_light_background"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_add1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add" />

            <Button
                android:id="@+id/btn_edit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit" />

            <Button
                android:id="@+id/btn_del1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <ToggleButton
                android:id="@+id/tg_move"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:text="Move"
                android:textOff="Move"
                android:textOn="Move" />


            <ToggleButton
                android:id="@+id/tg_resize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:text="Resize"
                android:textOff="Resize"
                android:textOn="Resize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/allproduct_bg_color"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_save1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />

            <Button
                android:id="@+id/btn_back1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Save"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="false"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:gravity="center|center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Back"
                android:textColor="@color/cardview_light_background" />

        </LinearLayout>

    </LinearLayout>

         
