<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Current Bill" />

    <com.dcs.myretailer.app.StyleScrollView
        android:id="@+id/sv_mainbill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" >

        <TableLayout
            android:id="@+id/tbl_main_itemlist"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1" >
        </TableLayout>
    </com.dcs.myretailer.app.StyleScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="↓" />

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="↑" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_bill_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◄" />

        <TextView
            android:id="@+id/txt_billsplit_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="bill_no" />

        <Button
            android:id="@+id/btn_bill_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="►" />

    </LinearLayout>

    <com.dcs.myretailer.app.StyleScrollView
        android:id="@+id/sv_billsplit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" >

        <TableLayout
            android:id="@+id/tbl_split_itemlist"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1" >
        </TableLayout>
    </com.dcs.myretailer.app.StyleScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_bill_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+ Bill" />

        <Button
            android:id="@+id/btn_bill_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- Bill" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
