<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                     

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_icon_myretailer_background" android:tag="layout/recyclerview_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="">

        <LinearLayout
            android:id="@+id/Lay1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/allproduct_bg_color"
            android:orientation="vertical"
            android:visibility="visible">


            <androidx.cardview.widget.CardView
                android:id="@+id/layout_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/colorBgcash"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="5dip">

                    <!--<TextView-->
                    <!--android:id="@+id/text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:text="text" />-->
                    <ImageView
                        android:id="@+id/category_image"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/image8" />
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="12sp"-->
                    <!--android:textColor="#1d1d1d"-->
                    <!--android:lineSpacingExtra="6sp"-->
                    <!--tools:text="PRODUCT CATEGORY 1"-->
                    <!--/>-->

                    <TextView
                        android:id="@+id/category_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="18dp"
                        android:layout_toLeftOf="@+id/dropdownmark"
                        android:layout_toRightOf="@+id/category_image"
                        android:ellipsize="end"
                        android:gravity="start|fill_horizontal"
                        android:lineSpacingExtra="3sp"
                        android:maxLines="1"
                        android:paddingLeft="5dip"
                        android:textAllCaps="true"
                        android:textColor="#1d1d1d"
                        android:textSize="14sp"
                        tools:text="PRODUCT CATEGORY 1" />

                    <!--<TextView-->
                    <!--android:id="@+id/date"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:text="date" />-->

                    <ImageView
                        android:id="@+id/dropdownmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/ic_arrow_right_grey_500" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </FrameLayout>
         
